{
    "compilerOptions": {
        "target": "ES6",
        "jsx": "react-jsx",
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "baseUrl": ".",
        "rootDir": "src",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "paths": {
            "#public/*": [
                "./public/*"
            ],
            "#config/*": [
                "./src/config/*"
            ],
            "#constants/*": [
                "./src/constants/*"
            ],
            "#nodejs/*": [
                "./src/nodejs/*"
            ],
            "#react/*": [
                "./src/react/*"
            ],
            "#styles/*": [
                "./src/styles/*"
            ],
            "#typescript/*": [
                "./src/typescript/*"
            ],
            "#utils/*": [
                "./src/utils/*"
            ]
        },
        "allowJs": true,
        "checkJs": false,
        "strict": true,
        "declaration": true,
        "declarationDir": "./dist",
        "inlineSources": true,
        "outDir": "dist",
        "sourceMap": true,
        "sourceRoot": "/",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    },
    "include": [
        "src",
        "global.d.ts",
        "node_modules/mongoose-paginate-v2/index.d.ts",
        "node_modules/mongoose-aggregate-paginate-v2/index.d.ts"
    ]
}