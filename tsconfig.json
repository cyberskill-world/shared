{
    "extends": "./public/tsconfig.base.json",
    "compilerOptions": {
        "baseUrl": ".",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "paths": {
            "#public/*": [
                "./public/*"
            ],
            "#configs/*": [
                "./src/configs/*"
            ],
            "#constants/*": [
                "./src/constants/*"
            ],
            "#node/*": [
                "./src/node/*"
            ],
            "#react/*": [
                "./src/react/*"
            ],
            "#styles/*": [
                "./src/styles/*"
            ],
            "#typescript/*": [
                "./src/typescript/*"
            ],
            "#utils/*": [
                "./src/utils/*"
            ]
        },
        "noEmit": true
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"]
}
