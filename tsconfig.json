{
    "compilerOptions": {
        /* Basic Options */
        "target": "ES6",
        "module": "NodeNext",
        "outDir": "dist",
        "rootDir": "src",
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "declaration": true,
        "declarationDir": "./dist",

        /* Source Map Options */
        "sourceMap": true,
        "inlineSources": true,
        "sourceRoot": "/",

        /* Strict Type-Checking Options */
        "strict": true,
        "noImplicitAny": false,

        /* Module Resolution Options */
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,

        /* Advanced Options */
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "checkJs": false
    },
    "include": ["src/**/*"]
}
