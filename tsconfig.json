{
    "extends": "./public/tsconfig.base.json",
    "compilerOptions": {
        "target": "ES6",
        "baseUrl": ".",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "paths": {
            "#public/*": [
                "./public/*"
            ],
            "#configs/*": [
                "./src/configs/*"
            ],
            "#constants/*": [
                "./src/constants/*"
            ],
            "#nodejs/*": [
                "./src/nodejs/*"
            ],
            "#react/*": [
                "./src/react/*"
            ],
            "#styles/*": [
                "./src/styles/*"
            ],
            "#typescript/*": [
                "./src/typescript/*"
            ],
            "#utils/*": [
                "./src/utils/*"
            ]
        },
        "declaration": true,
        "declarationMap": true,
        "inlineSources": true,
        "noEmit": true,
        "sourceMap": true
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"]
}
