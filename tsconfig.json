{
    "extends": "./public/tsconfig.base.json",
    "compilerOptions": {
        "baseUrl": ".",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "paths": {
            "#public/*": [
                "./public/*"
            ],
            "#config/*": [
                "./src/config/*"
            ],
            "#constant/*": [
                "./src/constant/*"
            ],
            "#node/*": [
                "./src/node/*"
            ],
            "#react/*": [
                "./src/react/*"
            ],
            "#style/*": [
                "./src/style/*"
            ],
            "#typescript/*": [
                "./src/typescript/*"
            ],
            "#util/*": [
                "./src/util/*"
            ]
        },
        "noEmit": true
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"]
}
