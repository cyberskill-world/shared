{
    "compilerOptions": {
        "target": "ES6",
        "module": "NodeNext",
        "lib": ["ESNext", "DOM"],
        "declaration": true,
        "declarationDir": "./dist",
        "outDir": "dist",
        "rootDir": "src",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "strict": true,
        "noImplicitAny": false,
        "strictPropertyInitialization": false,
        "skipLibCheck": true
    },
    "include": ["src/**/*"]
}
