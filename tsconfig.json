{
    "compilerOptions": {
        "target": "ES6",
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "rootDir": "src",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "allowJs": true,
        "checkJs": false,
        "strict": true,
        "declaration": true,
        "declarationDir": "./dist",
        "inlineSources": true,
        "outDir": "dist",
        "sourceMap": true,
        "sourceRoot": "/",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ]
}
